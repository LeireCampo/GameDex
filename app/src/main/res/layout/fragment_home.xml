<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/popular_now"
            android:textAppearance="?attr/textAppearanceHeadline6"
            android:textColor="@color/neon_blue"
            android:shadowColor="@color/neon_blue_glow"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="8"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_popular_games"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:paddingEnd="8dp"
                android:paddingStart="0dp" />

            <ProgressBar
                android:id="@+id/progress_bar_popular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone" />

            <TextView
                android:id="@+id/text_error_popular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="16dp"
                android:visibility="gone"
                android:text="@string/error_loading_games" />
        </FrameLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/recently_released"
            android:textAppearance="?attr/textAppearanceHeadline6"
            android:textColor="@color/neon_pink"
            android:shadowColor="@color/neon_pink_glow"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="8"
            android:textStyle="bold"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="8dp" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_recent_games"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:paddingEnd="8dp"
                android:paddingStart="0dp" />

            <ProgressBar
                android:id="@+id/progress_bar_recent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone" />

            <TextView
                android:id="@+id/text_error_recent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="16dp"
                android:visibility="gone"
                android:text="@string/error_loading_games" />
        </FrameLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/recommended_for_you"
            android:textAppearance="?attr/textAppearanceHeadline6"
            android:textColor="@color/neon_purple"
            android:shadowColor="@color/neon_purple_glow"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="8"
            android:textStyle="bold"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="8dp" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_recommended_games"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:paddingEnd="8dp"
                android:paddingStart="0dp" />

            <ProgressBar
                android:id="@+id/progress_bar_recommended"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone" />

            <TextView
                android:id="@+id/text_error_recommended"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="16dp"
                android:visibility="gone"
                android:text="@string/error_loading_games" />
        </FrameLayout>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>